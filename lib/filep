		WriteFile(oh, it, (DWORD)~it, &bw, NULL);
	}
	else // Center
	{
		ui64 lr_pad = padlen/2;
		PrintCenterPad(lr_pad, false);
		WriteFile(oh, it, (DWORD)~it, &bw, NULL);
